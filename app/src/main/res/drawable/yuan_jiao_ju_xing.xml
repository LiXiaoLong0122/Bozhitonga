<?xml version="1.0" encoding="utf-8"?>
<!-- 绘制一个圆角矩形 -->
<shape xmlns:android="http://schemas.android.com/apk/res/android" 
    android:shape="rectangle">

    <!--
      设置角度 
      android:radius="0dp"：设置四个角的角度为一致；
      android:topLeftRadius="0dp":设置左上角角度
      android:topRightRadius="0dp"设置右上角角度
      android:bottomLeftRadius="0dp"设置左下角角度
      android:bottomRightRadius="0dp"设置右下角角度
    -->
    <corners android:radius="5dp" />
    <!-- 面，纯色 -->
    <solid android:color="#ffffff" />
    <!-- 线，width线宽，color线的颜色，dashWidth虚线宽度,dashGap虚线间隔 -->
    <stroke
        android:dashWidth="0dp"
        android:dashGap="0dp"
        android:width="2dp"
        android:color="#aaa" />

</shape>