<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="20dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp" >

        <!-- 客服小图标 -->

        <ImageView
            android:id="@+id/customer_iv"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:padding="5dp"
            android:src="@drawable/customer_picture" />
        <!-- 客服服务中心 -->

        <TextView
            android:id="@+id/service_center_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_toRightOf="@+id/customer_iv"
            android:gravity="center_vertical"
            android:text="客服服务中心"
            android:textSize="20sp" />

        <RelativeLayout
            android:id="@+id/service_center_lv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/service_center_tv"
            android:layout_toRightOf="@+id/customer_iv" >

            <TextView
                android:id="@+id/service_news_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="春节安全公告"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/message_content_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/service_news_tv"
                android:layout_marginTop="10dp"
                android:lineSpacingExtra="3dp"
                android:lineSpacingMultiplier="1.2"
                android:text=""
                android:textSize="16sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/service_date_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/service_center_lv"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/customer_iv"
            android:gravity="center_vertical"
            android:text="2017-01-03"
            android:textSize="16sp" />
    </RelativeLayout>

</LinearLayout>