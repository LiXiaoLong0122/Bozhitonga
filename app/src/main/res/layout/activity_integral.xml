<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.bozhitong.ProfileActivity" >
    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="#ff0000">

        <ImageView
            android:id="@+id/img_back"
           android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
             android:layout_marginLeft="10dp"
            android:src="@drawable/left_arrow" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="个人中心"
            android:textColor="#fff"
            android:textSize="20sp" />
    </RelativeLayout>
       <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_below="@+id/relativeLayout1"
        android:background="#ff0000" />

       <RelativeLayout
           android:id="@+id/Mypoints"  
           android:layout_width="fill_parent"
           android:layout_height="100dp"
           android:background="#ff0000"
           android:layout_below="@+id/view" >

           <TextView
               android:id="@+id/textView2"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignParentLeft="true"
               android:layout_alignParentTop="true"
               android:layout_marginTop="26dp"
               android:layout_marginLeft="30dp"
               android:textSize="25sp"
               android:textColor="#fff"
               android:text="0" />

           <TextView
               android:id="@+id/textView3"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignParentBottom="true"
               android:layout_alignParentLeft="true"
               android:layout_marginBottom="14dp"
               android:layout_marginLeft="10dp"
               android:textSize="16sp"
               android:textColor="#fff"
               android:text="我的积分" />

           <TextView
               android:id="@+id/textView4"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignBaseline="@+id/textView2"
               android:layout_alignBottom="@+id/textView2"
               android:layout_marginRight="25dp"
               android:layout_alignParentRight="true"
               android:textSize="16sp"
               android:textColor="#fff"
               android:text="收入" />

           <TextView
               android:id="@+id/textView5"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignBottom="@+id/textView3"
               android:layout_alignParentRight="true"
               android:layout_marginRight="25dp"
               android:textSize="16sp"
               android:textColor="#fff"
               android:text="支出" />

       </RelativeLayout>
     <View
        android:id="@+id/View9"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="10dp"
         android:layout_marginTop="20dp"
        android:layout_below="@+id/Mypoints"
        android:background="@color/gainsboro" />
           <LinearLayout
        android:id="@+id/Integralwithdrawal"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:layout_below="@+id/View9"
        android:background="@drawable/btn_clickb_bg"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="2" >

            <ImageView
                android:layout_width="30dip"
                android:layout_height="30dip"
                android:layout_marginLeft="10dip"
                android:layout_gravity="center_vertical"
                android:background="@drawable/add_center_bg_b" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:text="积分提现"
                android:textColor="@color/black"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|right" >

           <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="0.0元"/> 

            <ImageView
                android:layout_width="15dip"
                android:layout_height="15dip"
                android:layout_gravity="center_vertical"
                 android:layout_marginRight="10dip"
                android:background="@drawable/arrow_green_right" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/View7"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/Integralwithdrawal"
        android:background="@color/gainsboro" />
     <LinearLayout
        android:id="@+id/creditsexchange"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/View7"
        android:background="@drawable/btn_clickb_bg"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="2" >

            <ImageView
                android:layout_width="30dip"
                android:layout_height="30dip"
                android:layout_marginLeft="10dip"
                android:layout_gravity="center_vertical"
                android:background="@drawable/add_center_bg_b" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:text="积分兑换"
                android:textColor="@color/black"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|right" >

           <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="0分"/> 

            <ImageView
                android:layout_width="15dip"
                android:layout_height="15dip"
                android:layout_gravity="center_vertical"
                 android:layout_marginRight="10dip"
                android:background="@drawable/arrow_green_right" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/View8"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/creditsexchange"
        android:background="@color/gainsboro" />
    
    
    
    
    
    
    
    
    
    
    <LinearLayout
        android:id="@+id/myoffline"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:layout_below="@+id/View8"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_clickb_bg"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="2" >

            <ImageView
                android:layout_width="30dip"
                android:layout_height="30dip"
                android:layout_marginLeft="10dip"
                android:layout_gravity="center_vertical"
                android:background="@drawable/add_center_bg_b" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:text="我的下线"
                android:textColor="@color/black"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|right" >

           <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="0人"/> 

            <ImageView
                android:layout_width="15dip"
                android:layout_height="15dip"
                android:layout_gravity="center_vertical"
                 android:layout_marginRight="10dip"
                android:background="@drawable/arrow_green_right" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/View10"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/myoffline"
        android:background="@color/gainsboro" />
   
</RelativeLayout>

