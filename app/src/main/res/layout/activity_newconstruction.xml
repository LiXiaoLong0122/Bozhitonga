<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.bozhitong.Newconstruction" >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="#8cac34">

        <ImageView
            android:id="@+id/img_back"
           android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
             android:layout_marginLeft="10dp"
            android:src="@drawable/left_arrow" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="新增地址"
            android:textColor="#ffffff"
            android:textSize="20sp" />

<!--         <TextView
            android:id="@+id/tv_compile"
            android:layout_width="60dp"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:textSize="16sp"
            android:background="#89E1E1E1"
            android:text="编辑" /> -->

    </RelativeLayout>
       <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_below="@+id/relativeLayout1"
        android:background="#E1E1E1" />
       
       
       
       
       
       
       
       
       
       
       
       
       
       
       
       
       
       
       
       
       
       
       
       
       
       
       
       
       
       
       
       
       
       
       
             <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/view"
        android:background="@drawable/c"
        android:layout_margin="10dp"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp" 
            android:layout_weight="1"
            android:background="#00000000"
            >
            <TextView
                 android:id="@+id/tv_title1"
                 android:layout_width="100dp"
                 android:layout_height="match_parent"
                 android:gravity="center_vertical"
                 android:text="省份:"
                 android:layout_marginLeft="10dp"
                 android:textColor="#000000"
                 android:textSize="20sp" />

             <EditText
                 android:id="@+id/et_username"
                 android:layout_width="wrap_content"
                 android:layout_height="match_parent"
                 android:layout_alignParentRight="true"
                 android:gravity="center_vertical"
                   android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                 android:layout_toRightOf="@+id/tv_title1"
                 android:background="@drawable/qq_edit"
                 android:ems="10"
                 android:hint="请输入省份城市区域"/>

            
                 <requestFocus />
         </RelativeLayout>
         <View 
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#d5d5d5"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#00000000" >

            <TextView
                android:id="@+id/tv_title2"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="详细地址:"
                android:layout_marginLeft="10dp"
                android:textColor="#000000"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/et_xb"
                android:layout_width="wrap_content"
               android:layout_height="match_parent"
                 android:gravity="center_vertical"
                   android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/qq_edit"
                android:layout_toRightOf="@+id/tv_title2"
                android:ems="10"
                android:hint="如：3号楼4单元506"/>
             <requestFocus />
        </RelativeLayout>
        
         <View 
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#d5d5d5"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp" 
            android:layout_weight="1"
            android:background="#00000000">

            <TextView
                android:id="@+id/tv_title3"
                android:layout_width="100dp"
                android:layout_height="match_parent"
               android:gravity="center_vertical"
                android:text="收货人:"
                android:layout_marginLeft="10dp"
                android:textColor="#000000"
                android:textSize="20sp" />
            <EditText
                android:id="@+id/et_nl"
                android:layout_width="wrap_content"
               android:layout_height="match_parent"
                 android:gravity="center_vertical"
                   android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/qq_edit"
                android:layout_toRightOf="@+id/tv_title3"
                android:numeric="integer"
                android:ems="10"
                android:hint="请输入名字"/>

            
            <requestFocus />
        </RelativeLayout>

         <View 
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#d5d5d5"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            />
         <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp" 
            android:layout_weight="1"
            android:background="#00000000">

            <TextView
                android:id="@+id/tv_title4"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="手机号:"
                android:layout_marginLeft="10dp"
                android:textColor="#000000"
                android:textSize="20sp" />
            <EditText
                android:id="@+id/et_nll"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                 android:gravity="center_vertical"
                 android:layout_alignParentRight="true"
                android:layout_toRightOf="@+id/tv_title4"
                android:background="@drawable/qq_edit"
                android:numeric="integer"
                android:ems="10"
                android:hint="请输入手机号"/>

            
            <requestFocus />
        </RelativeLayout>

         <View 
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#d5d5d5"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            />
    </LinearLayout>

 <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/linearLayout1">

        <Button
            android:id="@+id/btn_chongzhi"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="50dp"
            android:layout_weight="1"
            android:background="@drawable/btn_zc_bg"
            android:text="新增" 
            android:textColor="#ffffff"
            />
        
        <Button
            android:id="@+id/btn_tijiao"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="50dp"
            android:layout_weight="1"
            android:background="@drawable/btn_zc_bg"
            android:text="取消" 
            android:textColor="#ffffff"
            />

    </LinearLayout>
</RelativeLayout>
