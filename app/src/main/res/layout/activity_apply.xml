<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="com.example.bozhitong.Apply" >
<RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
         android:background="#ffffff"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true">


        <ImageView
            android:id="@+id/chacha"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/chacha" />

    </RelativeLayout>
       <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/relativeLayout1"
        android:background="#d5d5d5" />
       
       
       
       
       
       
       
       
       
       
    <RelativeLayout
        android:id="@+id/rL_neighbours"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:layout_below="@+id/view" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="100dp"
            android:src="@drawable/linju" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25dp"
            android:textSize="18sp"
            android:textColor="#89000000"
            android:layout_toRightOf="@+id/imageView1"
            android:text="邻里" />

    </RelativeLayout>
        <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/rL_neighbours"
        android:background="#d5d5d5" />
    <RelativeLayout
        android:id="@+id/rL_apply"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true" 
        android:layout_below="@+id/view1">
        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="100dp"
            android:src="@drawable/yinyun" />
        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25dp"
            android:textSize="18sp"
            android:textColor="#89000000"
            android:layout_toRightOf="@+id/imageView2"
            android:text="应用" />
    </RelativeLayout>

</RelativeLayout>
